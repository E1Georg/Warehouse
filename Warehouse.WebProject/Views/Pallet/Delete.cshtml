@model Warehouse.WebProject.Models.Pallet.UpdatePalletDto
﻿
@{ ViewData["Title"] = "Удаление паллета"; }

<h3>Вы действительно хотите удалить выбранный паллет?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ИД паллета:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>

        <dt class="col-sm-2">Глубина паллета:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.depth)
        </dd>

        <dt class="col-sm-2">Ширина паллета:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.width)
        </dd>

         <dt class="col-sm-2">Высота паллета:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.height)
        </dd>

        <dt class="col-sm-2">Масса паллета:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.weight)
        </dd>

        <dt class="col-sm-2">Срок годности паллета:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.expiration_date)
        </dd>       
    </dl>

    <form asp-action="Delete" method="post" asp-route-ID="@Model.ID">
        <div class="form-group">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            <a asp-action="Index">Вернуться к реестру паллетов</a>
        </div>
    </form>
</div>
