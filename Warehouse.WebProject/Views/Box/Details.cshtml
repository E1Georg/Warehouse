@model Warehouse.WebProject.Models.Box.UpdateBoxDto
﻿
@{
    ViewData["Title"] = "Подробная информация о коробке";
}

<h3>Подробная информация о коробке</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ИД коробки:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>

        <dt class="col-sm-2">Глубина коробки:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.depth)
        </dd>

        <dt class="col-sm-2">Ширина коробки:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.width)
        </dd>

        <dt class="col-sm-2">Высота коробки:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.height)
        </dd>

        <dt class="col-sm-2">Масса коробки:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.weight)
        </dd>

        <dt class="col-sm-2">Срок годности коробки:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.expiration_date)
        </dd>

        <dt class="col-sm-2">ИД паллета:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PalletID_string)
        </dd>
    </dl>    
</div>
<div>
    <a asp-action="Index">Вернуться к списку коробок</a>
</div>
