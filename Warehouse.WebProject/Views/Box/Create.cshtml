@model Warehouse.WebProject.Models.Box.CreateBoxDto

@{
    ViewData["Title"] = "Добавление коробки";
}

<h3>Добавление коробки</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="depth" class="control-label">Глубина коробки:</label>
                <input asp-for="depth" class="form-control" />
                <span asp-validation-for="depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="width" class="control-label">Ширина коробки:</label>
                <input asp-for="width" class="form-control" />
                <span asp-validation-for="width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="height" class="control-label">Высота коробки:</label>
                <input asp-for="height" class="form-control" />
                <span asp-validation-for="height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="weight" class="control-label">Масса коробки:</label>
                <input asp-for="weight" class="form-control" />
                <span asp-validation-for="weight" class="text-danger"></span>
            </div>
            <br />
            <label class="control-label">Укажите дату изготовления и/или срок годности</label>            
             <div class="form-group">                
                <label asp-for="production_date" class="control-label">Дата изготовления:</label>
                <input asp-for="production_date" class="form-control" />
                <span asp-validation-for="production_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="expiration_date" class="control-label">Срок годности:</label>
                <input asp-for="expiration_date" class="form-control" />
                <span asp-validation-for="expiration_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PalletID_string" class="control-label">Выберите паллет для коробки:</label>
                <select asp-for="PalletID_string" class="form-control" asp-items="@Model.Pallets"> </select> 
                <span asp-validation-for="PalletID_string" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку коробок</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}